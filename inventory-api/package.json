{
  "$schema": "http://json.schemastore.org/package",
  "name": "inventory-api",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "cross-env NODE_ENV=test jest --watchAll --detectOpenHandles",
    "test:ci": "cross-env NODE_ENV=test jest --ci --detectOpenHandles",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky install",
    "postinstall": "prisma generate",
    "env:local": "node scripts/switch-env.js local",
    "env:production": "node scripts/switch-env.js production"
  },
  "keywords": [
    "inventory",
    "api",
    "express",
    "prisma"
  ],
  "author": "",
  "license": "ISC",
  "description": "Inventory Management System API",
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.10.0",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "firebase-admin": "^13.5.0",
    "form-data": "^4.0.4",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "rsync": "^0.6.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^30.0.5",
    "jest-environment-node": "^30.0.5",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.4",
    "prisma": "^6.10.1",
    "supertest": "^6.3.3"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.json": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
